<!DOCTYPE html>
<html lang="ja">
  <head>
    <% if !is_welcome  %>
      <title><%= yield(:title) %> | HippoMarks</title>
    <% end  %>  
    <%= display_meta_tags(default_meta_tags) if is_welcome %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body data-js-debug="<%= @js_debug %>">
    <%= yield %>
  </body>
</html>
