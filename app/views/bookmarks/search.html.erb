<div id="app">
  <%= render "shared/navbar" %>
  <main class="p-3">
    <div class="row justify-content-center">
      <div class="col-8">
        <% if @bookmarks.blank? %>
          <div class="alert alert-warning" role="alert">No search results containing <strong><%= params[:s] %></strong> were found in your bookmarks.</div>
        <% end %>

        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col" class="text-center">#</th>
              <th scope="col">Name</th>
              <th scope="col">Domain</th>
              <th scope="col">Keyword</th>
              <th scope="col" class="text-center">Viewed times</th>
            </tr>
          </thead>
          <tbody>
            <% @bookmarks&.each do |bookmark| %>
              <tr>
                <th scope="row" class="text-center"><%= bookmark.id %></th>
                <td><strong><a href="<%= bookmark.url %>" target="_blank"><%= bookmark.name %></a></strong></td>
                <td><%= url_to_domain(bookmark.url) %></td>
                <td><%= bookmark.keyword %></td>
                <td class="text-center">999</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </main>
</div>

<div class="footer bg-dark pos-bottom">
  <div class="text-right text-white p-1 px-3">
    <a class="copyright text-white" href="https://www.hippohack.me/" target="_blank">Â© HippoHack</a>
  </div>
</div>

<%= javascript_pack_tag 'bookmark' %>