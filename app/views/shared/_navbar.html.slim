        = link_to 'Manage Folders', '#', class: 'dropdown-item'
        = link_to 'Import Bookmarks', '#', class: 'dropdown-item'
        = link_to 'Export Bookmarks', '#', class: 'dropdown-item'
        hr.my-1
        a.dropdown-item href="#" アカウント設定
        a.dropdown-item href="#" システム設定
        hr.my-1
        a.dropdown-item href="#" ログアウト